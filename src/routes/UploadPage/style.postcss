@component-namespace page {
  @component upload {
    padding: 18% 12%;
    .ant-input-group-addon:last-child {
      color: #fff;
      background-color: #1890ff;
      border-color: #1890ff;
      text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12);
      box-shadow: 0 2px 0 rgba(0, 0, 0, 0.045);
      cursor: pointer;
      font-size: 20px;
    }
    #file_chooser {
      display: none;
    }
    .urls {
      margin: 16px 0;
    }
  }
}